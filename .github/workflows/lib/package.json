{
    "name": "github-approval-automation",
    "version": "1.0.0",
    "description": "Tests for GitHub approval automation workflows",
    "main": "approval.js",
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "devDependencies": {
        "jest": "^29.0.0"
    },
    "jest": {
        "testEnvironment": "node",
        "collectCoverageFrom": [
            "approval.js"
        ],
        "testMatch": [
            "**/*.test.js"
        ],
        "coverageDirectory": "coverage",
        "coverageReporters": [
            "text",
            "lcov",
            "html",
            "json-summary"
        ]
    }
}
